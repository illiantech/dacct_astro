---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes" />

    <meta name="generator" content={Astro.generator} />
    <!-- description -->

    <meta
      name="description"
      content="We work for the benefit of the inhabitants of the State of Connecticut applying social intervention models that seek the transformation of the people."
    />

    <!-- keywords -->

    <meta
      name="keywords"
      lang="en"
      content="services, social, community, folklore, education, welfare, entrepreneurship, culture, cultural, diversity, history, benefits, finances, computing, programs, events, communities, Latinos, volunteers, assistance, connecticut, Dominican, America, alliance, strategies"
    />
    <meta
      name="keywords"
      lang="es"
      content="servicios, sociales, comunidad, folclor, educacion, bienestar, social, emprendimiento, cultura, cultural, diversidad, historia, beneficios, finanzas, computacion, programas, eventos, comunidades, latinos, voluntarios, asistencia, connecticut, dominicana, america, alianza, estrategias"
    />

    <!-- copy and author -->

    <meta name="copyright" content="https://www.dacct.org" />

    <meta name="author" content="Corp.DIR" />

    <meta name="robots" content="index, follow" />

    <!-- la cache del navegador se borrara cada dia (valor: segundos) -->
    <meta http-equiv="expires" content="86400" />

    <!-- audience -->

    <meta name="audience" content="all" />

    <!-- itemprop -->

    <meta itemprop="name" content="The Dominican American Coalition of Connecticut" />

    <meta itemprop="address" content="853 Fairfield Ave 2nd Bridgeport CT 06605" />

    <meta itemprop="telephone" content="+1 203-913-5370" />

    <meta itemprop="image" content="img/webp/img-3_slider/slider-3-720-webp.webp" />

    <!-- Open graph Facebook -->

    <meta property="og:title" content="The Dominican American Coalition of Connecticut" />

    <meta property="og:type" content="website" />

    <meta property="og:url" content="https://www.dacct.org" />

    <meta property="og:image" content="img/png/logo/logo_name_png.png" />

    <meta
      property="og:description"
      content="We work for the benefit of the inhabitants of the State of Connecticut applying so cial intervention models that seek the transformation of the people."
    />
    <!-- Open graph twitter -->

    <meta name="twitter:card" content="summary" />

    <meta name="twitter:title" content="The Dominican American Coalition of Connecticut" />

    <meta
      name="twitter:description"
      content="We work for the benefit of the inhabitants of the State of Connecticut applying so cial intervention models that seek the transformation of the people."
    />

    <meta name="twitter:image" content="img/png/logo/logo_name_png.png" />

    <!-- Metas google -->

    <meta name="googlebot" content="notranslate" />

    <!-- iconos adaptables -->

    <link rel="apple-touch-icon" sizes="57x57" href="/favicons/apple-icon-57x57.png" />
    <link rel="apple-touch-icon" sizes="60x60" href="/favicons/apple-icon-60x60.png" />
    <link rel="apple-touch-icon" sizes="72x72" href="/favicons/apple-icon-72x72.png" />
    <link rel="apple-touch-icon" sizes="76x76" href="/favicons/apple-icon-76x76.png" />
    <link rel="apple-touch-icon" sizes="114x114" href="/favicons/apple-icon-114x114.png" />
    <link rel="apple-touch-icon" sizes="120x120" href="/favicons/apple-icon-120x120.png" />
    <link rel="apple-touch-icon" sizes="144x144" href="/favicons/apple-icon-144x144.png" />
    <link rel="apple-touch-icon" sizes="152x152" href="/favicons/apple-icon-152x152.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-icon-180x180.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/favicons/android-icon-192x192.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="96x96" href="/favicons/favicon-96x96.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png" />
    <link rel="manifest" href="/favicons/manifest.json" />
    <meta name="msapplication-TileColor" content="#ffffff" />
    <meta name="msapplication-TileImage" content="/ms-icon-144x144.png" />
    <meta name="theme-color" content="#ffffff" />

    <!-- CDN font awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <!-- Outfit de 200 a 800 (regular a extra bold) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@200;300;400;500;600;700;800&display=swap" rel="stylesheet" />

    <!-- font TITLE Ballet -->

    <link href="https://fonts.googleapis.com/css2?family=Ballet&display=swap" rel="stylesheet" />

    <title>{title}</title>
  </head>
  <body>
    <header class="header">
      <!-- Menu -->
      <div class="menu-container">
        <div class="menu">
          <!-- Logo -->
          <a title="Logo" href="/" class="logo">
            <picture>
              <!-- adaptar imagenes -->

              <source srcset="/img/webp/logo/logo_name.webp" />
              <img
                class="logo--img"
                src="/img/png/logo/logo_name_png.png"
                alt="Logo with flags of The Dominican Republic and The United States where they make a social contribution in Connecticut"
                data-section="header"
                data-content="alt-logo"
              />
            </picture>
          </a>
          <div data-section="header" data-content="title-active-menu" title="Enable menu" class="menu-active" id="menu-active"></div>

          <nav role="navigation" class="nav" id="menu-nav">
            <div data-section="header" data-content="title-desactive-menu" title="Disable menu" class="menu-desactive" id="menu-desactive"></div>
            <ul class="list" id="list">
              <li class="list--item">
                <a data-section="header" data-content="title-nav-home" title="Home" href="/">Home</a>
              </li>
              <li class="list--item">
                <a data-section="header" data-content="title-nav-about_us" title="About us" href="/about_us/">About us</a>
              </li>
              <li class="list--item">
                <a data-section="header" data-content="title-nav-programs" title="Programs" href="/programs/">Programs</a>
              </li>
              <li class="list--item">
                <a title="Blog" href="/blog/">Blog</a>
              </li>

              <li class="list--item">
                <a data-section="header" data-content="title-nav-contacts" title="Contact us" href="/contact_us/">Contact us</a>
              </li>
              <li class="list--item donate-buttom">
                <a
                  data-section="header"
                  data-content="title-nav-donate"
                  title="Donate"
                  href="https://www.paypal.com/donate/?hosted_button_id=KZMTUG9N6XT7W"
                  target="_blank">Donate</a
                >
              </li>
              <li class="list--item">
                <div id="lang" class="lang lang__hover">
                  <em data-section="header" data-content="nav-lang"> language </em>
                </div>
                <div class="lang--selector">
                  <ul id="languageContainer" class="lang--list">
                    <li data-lang="es" data-section="header" data-content="title-es" title="Spanish" class="lang--list-item">
                      <span data-lang="es" lang="es">ES</span>
                      <img
                        data-lang="es"
                        data-section="header"
                        data-content="alt-es"
                        src="/img/png/icon/republica-dominicana.png"
                        alt="Flag of The Dominican Republic"
                      />
                    </li>
                    <li data-lang="en" data-section="header" data-content="title-en" title="English" class="lang--list-item">
                      <span data-lang="en" lang="en">EN</span>
                      <img
                        data-lang="en"
                        data-section="header"
                        data-content="alt-en"
                        src="/img/png/icon/estados-unidos.png"
                        alt="Flag of The United States"
                      />
                    </li>
                  </ul>
                </div>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </header>
    <main role="main" id="main">
      <!-- Slider automatico -->

      <slot />
    </main>
    <footer class="footer">
      <div class="container-contact">
        <address class="contact">
          <!-- LOGO FOOTER -->
          <!-- sobre si mismo -->
          <a title="Logo" href="/" class="logo logo__footer">
            <picture>
              <!-- adaptar imagenes -->

              <source srcset="/img/webp/logo/logo_name.webp" />
              <img
                data-section="footer"
                data-content="alt-logo"
                class="logo--img"
                src="/img/png/logo/logo_name_png.png"
                alt="Logo de banderas de republica dominicana y estados unidos donde se trabaja en una contribucion social en Connecticut"
              />
            </picture>
          </a>
          <!-- Flata links de redes sociales en plantillas -->
          <ul class="contact--list">
            <li class="contact--item">
              <a target="_blank" title="Facebook" href="https://www.facebook.com/dacctinfo/?ref=page_internal"
                ><i class="fa-brands fa-facebook-square"></i></a
              >
            </li>
            <li class="contact--item">
              <a target="_blank" title="Telegram" href=""><i class="fa-brands fa-telegram"></i></a>
            </li>
            <li class="contact--item">
              <a target="_blank" title="Instagram" href="https://www.instagram.com/dominicanamericancoalitionofct/"
                ><i class="fa-brands fa-instagram-square"></i></a
              >
            </li>
            <li class="contact--item">
              <a target="_blank" data-section="footer" data-content="title-email" title="
			Send email" href="mailto:contact@dacct.org"
                ><i class="fa-solid fa-envelope"></i></a
              >
            </li>
          </ul>
          <div class="container-autor">
            <a title="Ir a linkedin" href="https://www.linkedin.com/in/daniel-pimentel-78aaa7253/" class="autor">ILLIANTECH &ensp; 2022 - 2024</a>
          </div>
          <p data-section="footer" data-content="paragraph" class="footer--info">
            The Dominican-American Coalition is a non profit organization with the code 501 C 3.
          </p>
        </address>
      </div>
    </footer>
  </body>
</html>

<style is:global define:vars={{ MenuSelect }}>
  /* Principal */

  * {
    box-sizing: border-box;

    /* in firefox */

    scrollbar-width: thin;
    scrollbar-color: var(--colorSecundario) var(--white);
  }

  /* scroll */
  /* in webkit/blink (chromium) */

  *::-webkit-scrollbar {
    -webkit-appearance: none;
  }

  *::-webkit-scrollbar:vertical {
    width: 0.8em;
  }

  *::-webkit-scrollbar-button:increment {
    display: none;
  }

  *::-webkit-scrollbar:horizontal {
    height: 10px;
  }

  *::-webkit-scrollbar-thumb {
    background-color: var(--colorSecundario);
    border-radius: 20px;
    border: 2px solid var(--white);
  }

  *::-webkit-scrollbar-track {
    border-radius: 10px;
  }

  :root {
    --black: hsl(0, 0%, 5%);
    --white: hsl(0, 0%, 95%);
    --colorPrimario: hsl(224, 70%, 40%);
    --colorPrimario2: hsl(223, 49%, 23%);
    --colorSecundario: hsl(357, 71%, 44%);

    --shadowGeneral: 0 0 5px -3px var(--black);
    --letterSizeSmall: 1rem;
    --letterSizeMedium: 1.4rem;
    --letterSizeBig: 1.8rem;
    --letterSizeTitle: 3rem;
    --letterSizeGiant: 6rem;
    background-color: var(--white);
    color: var(--black);
    font-family: 'Outfit', sans-serif;
  }

  /* scroll personalized elements particular */

  .nav::-webkit-scrollbar:vertical,
  .alliance--list__mobile::-webkit-scrollbar:vertical,
  .blog--article::-webkit-scrollbar:vertical,
  .form-block--group-inputs textarea::-webkit-scrollbar:vertical {
    width: 0.5rem;
  }

  hr {
    border: none;
    margin: 0;
  }

  .list--item:nth-child() > a {
    border-bottom: 3px solid var(--colorSecundario);
  }
</style>
