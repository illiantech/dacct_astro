---
interface Props {
  wave: string;
}

const { wave } = Astro.props;
---

<div class="banner">
  <picture class="banner--picture">
    <source srcset="assets/img/jpg/prueba/prueba_menus.jpg" media="(min-width:1300px)" />

    <source srcset="assets/img/jpg/prueba/prueba_menus.jpg" />
    <img data-section="banner" data-content="alt" class="banner--img" src="assets/img/jpg/prueba/prueba_menus.jpg" alt="" />
  </picture>

  <h2 data-section="banner" data-content="title-principal" class="banner--title">PROGRAMS</h2>
</div>

<div class="wave"></div>

<style define:vars={{ wave }}>
  .wave {
    background-image: wave;
  }

  /* banner */

  .banner {
    position: relative;
    height: 100vh;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    /* --colorPrimario y colorPrimario2 con opacidad */
    background-image: linear-gradient(hsla(230, 70%, 30%, 0.6) 30%, hsla(224, 85%, 55%, 0.7) 70%);
  }

  .banner--picture {
    position: absolute;
    height: 100%;
    width: 100%;
    z-index: -100;
  }

  .banner--img {
    height: 100%;
    width: 100%;
    object-fit: cover;
  }

  .banner--title {
    position: absolute;
    color: var(--white);
    font-size: 2rem;
    z-index: 100;
    font-size: calc(var(--letterSizeGiant) / 3);
    text-transform: uppercase;
    letter-spacing: 3px;
    /* extra bold */
    font-weight: 800;
  }

  @media (min-width: 600px) {
    .banner--title {
      font-size: calc(var(--letterSizeGiant) / 1.5);
    }
  }

  @media (min-width: 1000px) {
    .banner--title {
      font-size: var(--letterSizeGiant);
    }
  }

  /* wave */

  .wave-container {
    position: relative;
    top: -390px;
    height: 400px;
  }

  .wave {
    position: absolute;
    top: 10px;
    width: 100vw;
    height: 100vh;

    background-repeat: no-repeat;
    background-size: 100%;
    background-position: bottom;
  }
</style>
