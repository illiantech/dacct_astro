---
import Layout from '../layouts/Layout.astro';

import BannerPages from '../components/BannerPages.astro';
---

<Layout title="contact us" menuSelect={4}>
  <BannerPages upperTitle="CONTACT US" wave="/img/svg/contactanos/wave_contactanos.svg" />
  <form class="form-block" id="form">
    <div class="form-block--group-information">
      <h3 data-section="info-form" data-content="title">Information</h3>
      <p><i class="fa-solid fa-phone"></i>+1 203-913-5370</p>
      <p><i class="fa-solid fa-location-dot"></i>853 Fairfield Ave 2nd Bridgeport CT 06605</p>
      <p><i class="fa-solid fa-envelope"></i>contact@dacct.org</p>
    </div>
    <div class="form-block--group-inputs">
      <label data-section="form" data-content="name" for="name">Full name:</label>

      <input data-validator="name" placeholder="John Doe" id="name" type="text" name="Name" />
      <p data-section="form" data-content="name-validator">Only alphabetic characters with a space between each word</p>
      <p data-section="form" data-content="required">Mandatory field</p>

      <label data-section="form" data-content="email" for="email">Email:</label>

      <input
        data-validator="email"
        data-section="form"
        data-content="email-input"
        placeholder="example@gmail.com"
        id="email"
        type="text"
        name="Email"
      />
      <p data-section="form" data-content="email-validator">Please enter a valid email address</p>
      <p data-section="form" data-content="required">Mandatory field</p>

      <label data-section="form" data-content="phone" for="phone">Phone:</label>

      <input data-validator="phone" type="text" name="Phone" id="phone" placeholder="+1 (555) 123-45-67" />
      <p data-section="form" data-content="phone-validator">Please Input a valid phone number</p>
      <p data-section="form" data-content="required">Mandatory field</p>

      <label data-section="form" data-content="message" for="message">Message:</label>

      <textarea data-section="form" data-content="message-input" placeholder="Share your ideas" name="Message" id="message"></textarea>

      <p data-section="form" data-content="submit-error" id="formSubmitError">ERROR: Incorrect data</p>
      <input data-section="form" data-content="submit" type="submit" value="Send" id="formSubmit" />
      <p data-section="form" data-content="submit-send">Your form was successfully submitted</p>
    </div>
  </form>

  <!-- fin contacto -->

  <div class="container-paragraph">
    <div class="container-paragraph--text">
      <p data-section="info-form" data-content="paragraph">
        <strong>Be a volunteer!</strong>
        The objective of The Dominican American Coalition of Connecticut is to educate and improve the quality of life of many people. Thanks to people
        like you we'll be able to reach our goals. If you have time to collaborate in our projects, Contact us and become a volunteer!
      </p>
    </div>
    <div class="container-paragraph--wave"></div>
  </div>
</Layout>

<style>
  .form-block {
    position: relative;
    z-index: 10;
    width: 90vw;
    max-width: 1200px;
    height: 930px;
    margin-left: auto;
    margin-right: auto;
    margin-top: 100px;
    background-color: hsl(228, 4%, 76%);
    border-radius: 30px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .form-block::before {
    content: '';
    position: absolute;
    width: 100%;
    height: 100px;
    background-color: var(--colorPrimario);
  }

  /* form-block group-information ----- block */

  .form-block--group-information {
    position: relative;
    background-color: #fff;
    width: 70%;
    height: 200px;
    border-bottom-left-radius: 30px;
    border-bottom-right-radius: 30px;
    margin-bottom: 10px;
  }

  .form-block--group-information h3 {
    margin-top: 15px;
    margin-bottom: 25px;
    text-align: center;
    color: var(--colorPrimario2);
    font-size: var(--letterSizeMedium);
    letter-spacing: 2px;
  }

  .form-block--group-information p {
    width: 80%;
    max-width: 350px;
    margin-bottom: 20px;
    margin-left: auto;
    margin-right: auto;
    text-align: left;
  }

  .form-block--group-information p i {
    margin-right: 10px;
  }

  /* form-block group-form ----- block */

  .form-block--group-inputs {
    width: 80%;
    position: relative;
  }

  .form-block--group-inputs label {
    display: block;
    width: 150px;
    margin-top: 40px;
    margin-bottom: 10px;
    font-weight: bold;
    color: var(--colorPrimario2);
  }

  /* textarea comun style with inputs*/

  .form-block--group-inputs input,
  .form-block--group-inputs textarea {
    width: 100%;
    height: 40px;
    border-radius: 15px;
    outline: none;
    border: 3px solid transparent;
    background-color: #fff;
    margin-bottom: 5px;
    transition: border 0.2s;
  }

  /* textarea */

  .form-block--group-inputs textarea {
    resize: none;
    height: 150px;
    margin-bottom: 25px;
  }

  .form-block--group-inputs textarea {
    resize: none;
    height: 150px;
    margin-bottom: 25px;
  }

  /* inputs text focus */

  .form-block--group-inputs input:nth-last-of-type(n + 2):focus,
  .form-block--group-inputs textarea:focus {
    border: 3px solid var(--colorPrimario);
  }

  /* submit */

  .form-block--group-inputs input:last-of-type {
    margin-top: 33.4px;
    display: block;
    margin-left: auto;
    margin-right: auto;
    width: 50%;
    color: var(--colorSecundario);
    font-weight: bold;
    cursor: pointer;
  }

  .form-block--group-inputs p {
    width: 100%;
    margin: 0;
    color: red;
    position: absolute;
    font-size: 0.8rem;
    opacity: 0;
    transition: opacity 0.2s;
  }

  /* message submit */

  .form-block--group-inputs p:nth-last-of-type(2) {
    width: 210px;
    text-align: center;
    font-size: var(--letterSizeSmall);
    background-color: var(--colorSecundario);
    color: var(--white);
    left: 0;
    transition-property: left, opacity;
    transition-timing-function: cubic-bezier(0.15, 0.32, 0.58, 1.28);
  }

  .form-block--group-inputs p:last-of-type {
    text-align: center;
    top: calc(100% + 10px);
    font-size: var(--letterSizeSmall);
    color: blue;
  }

  /* --- INVALID or REQUIRED --- */

  /* invalid or required modifier NAME */
  /* invalid or required modifier EMAIL */

  .form-block--group-inputs__name-required p:nth-of-type(2),
  .form-block--group-inputs__email-required p:nth-of-type(4),
  .form-block--group-inputs__phone-required p:nth-of-type(6),
  .form-block--group-inputs__name-invalid p:first-of-type,
  .form-block--group-inputs__email-invalid p:nth-of-type(3),
  .form-block--group-inputs__phone-invalid p:nth-of-type(5) {
    opacity: 1;
  }

  .form-block--group-inputs__name-required input:first-of-type,
  .form-block--group-inputs__name-required input:first-of-type:focus,
  .form-block--group-inputs__email-required input:nth-of-type(2),
  .form-block--group-inputs__email-required input:nth-of-type(2):focus,
  .form-block--group-inputs__phone-required input:nth-of-type(3),
  .form-block--group-inputs__phone-required input:nth-of-type(3):focus,
  .form-block--group-inputs__name-invalid input:first-of-type,
  .form-block--group-inputs__name-invalid input:first-of-type:focus,
  .form-block--group-inputs__email-invalid input:nth-of-type(2),
  .form-block--group-inputs__email-invalid input:nth-of-type(2):focus,
  .form-block--group-inputs__phone-invalid input:nth-of-type(3),
  .form-block--group-inputs__phone-invalid input:nth-of-type(3):focus {
    border: 3px solid red;
  }

  /* submit error */

  .form-block--group-inputs__submit-error p:nth-last-of-type(2) {
    opacity: 1;
    left: calc(50% - 105px);
  }

  /* submit sent */

  .form-block--group-inputs__submit-send p:last-of-type {
    opacity: 1;
  }

  @media (min-width: 1000px) {
    /* form-block ----- block*/

    .form-block {
      height: 730px;
      flex-direction: row;
      justify-content: flex-end;
    }

    .form-block:before {
      height: 100%;
      width: 250px;
    }

    /* form-block group-information ----- block */

    .form-block--group-information {
      width: 400px;
      height: 400px;
      border-bottom-right-radius: 0px;
      border-top-left-radius: 30px;
      margin-bottom: 0px;
    }

    .form-block--group-information h3 {
      margin-top: 30px;
      margin-bottom: 50px;
      font-size: var(--letterSizeBig);
    }

    .form-block--group-information p {
      width: 100%;
      font-size: var(--letterSizeMedium);
      margin-bottom: 60px;
    }

    .form-block--group-information p i {
      font-size: var(--letterSizeMedium);
    }

    /* form-block group-form ----- block */

    .form-block--group-inputs {
      width: 40%;
      position: absolute;
      left: 10%;
    }

    .form-block--group-inputs label:first-child {
      margin-top: 0px;
    }
  }

  @media (min-width: 1300px) {
    /* submit hover */

    .form-block--group-inputs input:last-of-type:hover {
      border: 3px solid var(--colorSecundario);
    }
  }
  /* 

container paragraph

*/
  .container-paragraph {
    height: 400px;
    width: 100%;

    position: relative;
    display: flex;
    justify-content: center;
  }

  .container-paragraph--text {
    width: 340px;
    height: 80%;
    display: flex;
    background-color: #fff;
    align-items: center;
    margin-top: 0;
    margin-bottom: 0;
    text-align: center;

    padding: 0 20px 0 20px;
    position: absolute;
    bottom: 0;
    border-radius: 39% 57% 10% 33% / 59% 47% 42% 31%;
  }

  .container-paragraph--text p {
    position: relative;
    z-index: 100;
  }

  .container-paragraph--wave {
    position: absolute;
    bottom: -10px;
    width: 100%;
    height: 100vh;
    background-image: url(/img/svg/programs/wave_programs_footer_contacts.svg);
    background-repeat: no-repeat;
    background-size: 100%;
    background-position: bottom;
  }

  @media (min-width: 800px) {
    .container-paragraph {
      margin-top: 300px;
    }

    .container-paragraph--text {
      font-size: var(--letterSizeMedium);
      padding: 0 30px 0 30px;
      width: 600px;
      height: 130%;
      bottom: 20px;
    }

    .container-paragraph--wave {
      position: absolute;
      bottom: -25px;
    }
  }
</style>
