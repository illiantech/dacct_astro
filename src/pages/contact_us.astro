---
import Layout from "../layouts/Layout.astro";

import MenuSelect from "../enums";
import BannerPages from "../components/BannerPages.astro";
import FormContact from "../components/contact/FormContact";
---

<Layout title="Contact us" menuSelect={MenuSelect.contactUs}>
  <BannerPages
    upperTitle="CONTACT US"
    wave="/img/svg/contactanos/wave_contactanos.svg"
  />
<FormContact client:visible/>
  <div class="container-paragraph">
    <div class="container-paragraph--text">
      <p>
        <strong>Be a volunteer!</strong>
        The objective of The Dominican American Coalition of Connecticut is to educate
        and improve the quality of life of many people. Thanks to people like you
        we'll be able to reach our goals. If you have time to collaborate in our
        projects, Contact us and become a volunteer!
      </p>
    </div>
    <div class="container-paragraph--wave"></div>
  </div>
</Layout>

<style>
  


  .container-paragraph {
    height: 400px;
    width: 100%;

    position: relative;
    display: flex;
    justify-content: center;
  }

  .container-paragraph--text {
    width: 340px;
    height: 80%;
    display: flex;
    background-color: #fff;
    align-items: center;
    margin-top: 0;
    margin-bottom: 0;
    text-align: center;

    padding: 0 20px 0 20px;
    position: absolute;
    bottom: 0;
    border-radius: 39% 57% 10% 33% / 59% 47% 42% 31%;
  }

  .container-paragraph--text p {
    position: relative;
    z-index: 100;
  }

  .container-paragraph--wave {
    position: absolute;
    bottom: -10px;
    width: 100%;
    height: 100vh;
    background-image: url(/img/svg/contactanos/wave_footer.svg);
    background-repeat: no-repeat;
    background-size: 100%;
    background-position: bottom;
  }

  @media (min-width: 800px) {
    .container-paragraph {
      margin-top: 300px;
    }

    .container-paragraph--text {
      font-size: var(--letterSizeMedium);
      padding: 0 30px 0 30px;
      width: 600px;
      height: 130%;
      bottom: 20px;
    }

    .container-paragraph--wave {
      position: absolute;
      bottom: -25px;
    }
  }
</style>
