---
import Layout from "../layouts/Layout.astro";

import MenuSelect from "../enums";
import BannerPages from "../components/BannerPages.astro";
import "../styles/programs/programs.css";
import ChocolateItem from "../components/programs/Chocolate.tsx";
import CodacItem from "../components/programs/Codac.tsx";
import FinancesItem from "../components/programs/Finances.tsx";
import CoAllianceItem from "../components/programs/CoAlliance.tsx";
---

<Layout title="Programs" menuSelect={MenuSelect.programs}>
  <BannerPages
    upperTitle="Programs"
    wave="/img/svg/programs/wave_programs.svg"
  />
  <hr />
  <!-- PROGRAMAS -->

  <ul class="programs-list">
    <ChocolateItem client:visible />

    <CodacItem client:visible />

    <FinancesItem client:visible />

    <CoAllianceItem client:visible />
  </ul>
</Layout>
